@model IEnumerable<Contacts>
@{ 
	ViewData["Title"] = "Home Page"; 
}

<div class="text-center">
	<h1 class="display-4">Welcome to my agenda Guys</h1>
</div>

<a href="/Home/Agregar" class="btn btn-primary">Agregar</a>

<table class="table-bordered table-striped">
	<thead>
		<tr>
			<th>Nombres</th>
			<th>Apellidos</th>
			<th>TelefonoMovil</th>
			<th>TelefonoCasa</th>
			<th>TelefonoTrabajo</th>
			<th>Tipo de Contacto</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
		<tr>
			<td>@item.Nombres</td>
			<td>@item.Apellidos</td>
			<td>@item.TelefonoMovil1</td>
			<td>@item.TelefonoCasa</td>
			<td>@item.TelefonoTrabajo</td>
			<td>@item.Tipo</td>
			<td class="text-center">
				<a href="/Home/Detalle/@item.Id" class="btn btn-secondary">Detalle</a>
				<a href="/Home/Modificar/@item.Id" class="btn btn-warning">Editar</a>
				<a href="/Home/Eliminar/@item.Id " class="btn btn-danger">Eliminar</a>
			</td>
		</tr>
		}
	</tbody>
</table>
